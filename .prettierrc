{
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "arrowParens": "always",
    "htmlWhitespaceSensitivity": "ignore",
    "printWidth": 120,
    "overrides": [
        {
            "files": ["*.html", "*.less"],
            "options": {
                "tabWidth": 2,
                "bracketSameLine": true
            }
        },
        {
            "files": "*.html",
            "options": {
                "parser": "angular"
            }
        }
    ]
}
